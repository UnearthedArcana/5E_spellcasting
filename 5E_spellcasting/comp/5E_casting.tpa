	    PATCH_IF !(FILE_CONTAINS_EVALUATED (~hidespl.2da~ ~%SOURCE_RES%~)) BEGIN
	      READ_SHORT 0x1c spelltype
	      READ_LONG 0x1c spelllevel
	      PATCH_IF (spelltype = 2) BEGIN
	        READ_BYTE 0x21 exclude
	        PATCH_IF ((exclude BAND 0b11000000) = 0b01000000) BEGIN // valid for druids
	          SPRINT $druid_only_spells(~%SOURCE_RES%~)~%spelllevel%~
	        END
	        PATCH_IF ((exclude BAND 0b11000000) = 0b00000000) BEGIN // valid for both
	          SPRINT $cleric_druid_spells(~%SOURCE_RES%~)~%spelllevel%~
	        END
	      END
	    END
	  END
    END
  BUT_ONLY
  COPY_EXISTING ~mxsplran.2da~ ~override~
    COUNT_2DA_COLS cols
    PATCH_IF (cols > 1) BEGIN
      SET max_lvl_plus = cols
    END
  BUT_ONLY
  ACTION_IF !(FILE_EXISTS_IN_GAME ~d5garns.spl~) BEGIN
    COPY ~%MOD_FOLDER%/lib/semi_spont/d5_base.spl~ ~override/d5garns.spl~
      PHP_EACH druid_only_spells AS dru_spl => lvl BEGIN
        PATCH_IF (lvl < max_lvl_plus) BEGIN
          LPF ADD_SPELL_EFFECT INT_VAR target = 1 opcode = 171 timing = 1 STR_VAR resource = EVAL ~%dru_spl%~ END
        END
      END
      PHP_EACH cleric_druid_spells AS prs_spl => lvl BEGIN
        PATCH_IF (lvl < max_lvl_plus) BEGIN
          LPF ADD_SPELL_EFFECT INT_VAR target = 1 opcode = 171 timing = 1 STR_VAR resource = EVAL ~%prs_spl%~ END
        END
      END
    BUT_ONLY
  END
